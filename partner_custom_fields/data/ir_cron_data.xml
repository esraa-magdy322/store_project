<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Scheduled Action: Check Partner Expiration Daily -->
        <record id="ir_cron_check_partner_expiration" model="ir.cron">
            <field name="name">Partner Expiration Alert Checker</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="state">code</field>
            <field name="code">model._cron_check_partner_expiration()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active" eval="True"/>
        </record>
    </data>
</odoo>
