<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_form_portal_user_button" model="ir.ui.view">
        <field name="name">res.partner.form.portal.user.button</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <!-- Add button in the button box (smart buttons area) -->
            <div name="button_box" position="inside">
                <button name="action_create_portal_user"
                        type="object"
                        string="Create Portal User"
                        class="oe_stat_button"
                        icon="fa-user"
                        invisible="not id"/>
            </div>
        </field>
    </record>
</odoo>
