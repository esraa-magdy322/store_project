<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Add enctype to the main portal form -->
    <template id="portal_my_details_inherit_enctype" inherit_id="portal.portal_my_details">
        <xpath expr="//form[@action='/my/account']" position="attributes">
            <attribute name="enctype">multipart/form-data</attribute>
        </xpath>
    </template>

    <!-- Your existing attachments section -->
    <template id="portal_my_details_fields_inherit" inherit_id="portal.portal_my_details_fields">
        <xpath expr="//div[@class='clearfix'][last()]" position="after">

            <!-- Attachments Section Header -->
            <div class="clearfix" />
            <div class="col-12 mt-4 mb-3">
                <h5>Documents &amp; Attachments</h5>
                <small class="form-text text-muted">
                    Manage your uploaded documents. You can edit document names, expiry dates, or replace files.
                </small>
            </div>

            <!-- Attachments Table -->
            <div class="col-12">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 25%;">Document Name</th>
                                <th style="width: 18%;">Current File</th>
                                <th style="width: 12%;">Expiry Date</th>
                                <th style="width: 20%;">Replace/Upload File</th>
                                <th style="width: 8%;">Size</th>
                                <th style="width: 8%;">Download</th>
                                <th style="width: 8%;">Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Existing Attachments -->
                            <t t-foreach="partner.attachment_line_ids" t-as="att">
                                <tr>
                                    <!-- Hidden ID -->
                                    <input type="hidden" t-att-name="'attachment_id_' + str(att.id)" t-att-value="att.id"/>

                                    <!-- Document Name (Editable) -->
                                    <td>
                                        <input type="text"
                                               t-att-name="'attachment_name_' + str(att.id)"
                                               class="form-control form-control-sm"
                                               t-att-value="att.name"
                                               placeholder="Document name"/>
                                    </td>

                                    <!-- Current File Name (Read-only) -->
                                    <td>
                                        <input type="text"
                                               class="form-control form-control-sm"
                                               t-att-value="att.attachment_name"
                                               readonly="readonly"
                                               style="background-color: #f8f9fa;"/>
                                    </td>

                                    <!-- Expiry Date (Editable) -->
                                    <td>
                                        <input type="date"
                                               t-att-name="'end_date_' + str(att.id)"
                                               class="form-control form-control-sm"
                                               t-att-value="att.end_date or ''"/>
                                    </td>

                                    <!-- Replace File -->
                                    <td>
                                        <input type="file"
                                               t-att-name="'replace_file_' + str(att.id)"
                                               class="form-control form-control-sm"
                                               accept="*/*"/>
                                        <small class="text-muted d-block">Leave empty to keep</small>
                                    </td>

                                    <!-- File Size -->
                                    <td class="text-muted small">
                                        <t t-if="att.file_size &lt; 1024">
                                            <t t-esc="att.file_size"/> B
                                        </t>
                                        <t t-elif="att.file_size &lt; 1048576">
                                            <t t-esc="round(att.file_size / 1024, 2)"/> KB
                                        </t>
                                        <t t-else="">
                                            <t t-esc="round(att.file_size / 1048576, 2)"/> MB
                                        </t>
                                    </td>

                                    <!-- Download Button -->
                                    <td class="text-center">
                                        <a t-if="att.attachment_data or att.attachment_name"
                                           t-attf-href="/my/attachments/download/#{att.id}"
                                           class="btn btn-sm btn-outline-primary"
                                           title="Download">
                                            <i class="fa fa-download"/> Download
                                        </a>
                                        <span t-else="" class="text-muted small">No file</span>
                                    </td>

                                    <!-- Delete Button -->
                                    <td class="text-center">
                                        <a t-attf-href="/my/attachments/delete/#{att.id}"
                                           class="btn btn-sm btn-outline-danger"
                                           onclick="return confirm('Are you sure you want to delete this document?');"
                                           title="Delete">
                                            <i class="fa fa-trash"/>
                                        </a>
                                    </td>
                                </tr>
                            </t>

                            <!-- Add New Document Row -->
                            <tr class="table-success">
                                <td colspan="7" class="p-0">
                                    <div class="p-3 bg-light">
                                        <h6 class="mb-3">
                                            <i class="fa fa-plus-circle text-success"/> Add New Document
                                        </h6>
                                        <div class="row g-2">
                                            <!-- New Document Name -->
                                            <div class="col-md-3">
                                                <label class="form-label small mb-1">Document Name <span class="text-danger">*</span></label>
                                                <input type="text"
                                                       name="new_attachment_name"
                                                       class="form-control form-control-sm"
                                                       placeholder="e.g., ID Card, Passport"
                                                       id="new_doc_name"/>
                                            </div>

                                            <!-- New Expiry Date -->
                                            <div class="col-md-2">
                                                <label class="form-label small mb-1">Expiry Date</label>
                                                <input type="date"
                                                       name="new_end_date"
                                                       class="form-control form-control-sm"
                                                       id="new_doc_date"/>
                                            </div>

                                            <!-- New File Upload -->
                                            <div class="col-md-5">
                                                <label class="form-label small mb-1">Upload File <span class="text-danger">*</span></label>
                                                <input type="file"
                                                       name="new_attachment_file"
                                                       class="form-control form-control-sm"
                                                       accept="*/*"
                                                       id="new_doc_file"/>
                                                <small class="text-muted">Max file size: 25MB</small>
                                            </div>

                                            <div class="col-md-2 d-flex align-items-end">
                                                <small class="text-muted">
                                                    <i class="fa fa-info-circle"/> Fill name and file to add
                                                </small>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <div class="alert alert-info mt-3">
                    <i class="fa fa-info-circle"/>
                    <strong>Instructions:</strong>
                    <ul class="mb-0 mt-2">
                        <li>To add a new document: Fill in the document name and upload a file in the "Add New Document" section</li>
                        <li>To replace an existing file: Choose a new file in the "Replace/Upload File" column</li>
                        <li>To update document details: Edit the name or expiry date and click "Save" at the bottom</li>
                    </ul>
                </div>
            </div>

        </xpath>
    </template>
</odoo>